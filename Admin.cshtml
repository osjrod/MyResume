@{
    Layout = "~/_Layout.cshtml";
}

@{
    var db = Database.Open("data"); 
    var selectQueryString = "SELECT * FROM recommendations";
}

 @{
        try{
        if ((bool)@Session["logged"] == false){
            Response.Redirect("/");
        }
        }
        catch{
            Response.Redirect("/");
        }
}


<div class="jumbotron jumbotron-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    Administration
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="container col-sm-12 col-lg-12">
    <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span>
                <h3 class="panel-title">
                    Recommendations</h3>
                <span class="label label-info">
                    @db.Query(selectQueryString).Count()</span>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                            @foreach(var row in db.Query(selectQueryString))
                             {
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-xs-2 col-md-1">
                                            <img src="/Img/descarga.jpg" class="img-circle img-responsive" alt="" /></div>
                                        <div class="col-xs-10 col-md-11">
                                            <div>
                                                <h4>
                                                    @row.name</h4>
                                                <div class="mic-info">
                                                    <p><a href="mailto:#">@row.email </a> <br/>@row.tel</p> 
                                                </div>
                                            </div>
                                            <div class="comment-text">
                                                <p>@row.comment</p>
                                            </div>
                                            <div class="action">
                                                    <form class="lineal" action="/bd/activeRecomendation.cshtml" method="post">
                                                        <input name="id" type="hidden" value="@row.id" />
                                                        <button type="submit" class="btn btn-success btn-xs" id="active" title="Active" @{if(row.active == 1){@Html.Raw("disabled")}}>
                                                            <span class="glyphicon glyphicon-ok"></span>
                                                        </button>
                                                    </form>
                                                <form class="lineal" action="/bd/inactiveRecomendation.cshtml" method="post">
                                                        <input name="id" type="hidden" value="@row.id" />
                                                <button type="submit" class="btn btn-warning btn-xs" id="inactive" title="Inactive" @{if(row.active == 0){@Html.Raw("disabled")}}>
                                                    <span class="glyphicon glyphicon-remove"></span>
                                                </button>
                                                    </form>
                                                 <form class="lineal" action="/bd/deleteRecomendation.cshtml" method="post">
                                                        <input name="id" type="hidden" value="@row.id" />
                                                <button type="submit" class="btn btn-danger btn-xs" id="delete" title="Delete">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                                     </form>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            } 
                    </ul>
            </div>
        </div>
    </div>
</div>




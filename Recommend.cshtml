@{
    Layout = "~/_Layout.cshtml";
}

@{
    var db = Database.Open("data"); 
    var selectQueryString = "SELECT * FROM recommendations where active = 1";


}
<html> 
<body>
    <div id="container"> 
<h1>recommendations</h1> 


@foreach(var row in db.Query(selectQueryString))
{
    <p>@row.name</p>
    <p>@row.email</p>
    <p>@row.tel</p>
    <p>@row.comment</p>
}
 
        <form action="/InsertarRecomendacion.cshtml" method="post">
        
        <input type="text" name="name" placeholder="Name" /> <br />
        <input type="text" name="email" placeholder="Email Address" /><br />
        <input type="text" name="tel" placeholder="Telephone Number" /><br />
        <textarea name="comment" placeholder="Comment" ></textarea> <br />

        <input type="submit" name="Enviar" value="Enviar" />
    </form>

    </div>
</body> 
</html>